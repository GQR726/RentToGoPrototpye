<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Your Details"
             android:textAlignment="center"
             android:id="@+id/textview3"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">        
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Customer Name: "
            android:paddingLeft="7dip"
            android:id="@+id/cust_name"/>
         <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="name"
            android:paddingLeft="7dip"     
            android:id="@+id/custname"/>
        </LinearLayout>
     <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">   
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Customer Username: "
            android:paddingLeft="7dip"
            android:id="@+id/cust_usrname"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="username"
            android:paddingLeft="7dip"     
            android:id="@+id/custusrname"/>
        </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"> 
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Phone Number: "
            android:paddingLeft="7dip"
            android:id="@+id/cust_phnnumber"/>
         <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="phn number"
            android:paddingLeft="7dip"     
            android:id="@+id/custphnnumber"/>
        </LinearLayout>
        <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"> 
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Address: "
            android:paddingLeft="7dip"
            android:id="@+id/cust_address"/>
         <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="address"
            android:paddingLeft="7dip"     
            android:id="@+id/custaddress"/>
            </LinearLayout>
            <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"> 
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Enter Password:"
            android:paddingLeft="7dip"
            android:id="@+id/usr_pswrd"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
           android:text="password"
            android:paddingLeft="7dip"
            android:id="@+id/cust_password"/>
                </LinearLayout>
    <Button
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:text="Edit Profile"
            android:id="@+id/btneditcustprofile"/>
    <Button
        
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Share my details via SMS"
        android:id="@+id/custsms"/>
      <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Share my details via Bluetooth"
        android:id="@+id/custbluetooth"/>
</LinearLayout>
